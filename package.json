{
  "name": "unistyle",
  "version": "0.3.0",
  "description": "Write modular and scalable CSS using the next version of ECMAScript.",
  "main": "src/index.js",
  "bin": {
    "unistyle": "bin/unistyle"
  },
  "scripts": {
    "lint": "xo",
    "pretest": "npm run -s lint",
    "test": "ava 'test/*-test.js'"
  },
  "keywords": [
    "css",
    "styles",
    "stylesheet",
    "ecmascript",
    "es6",
    "es2015",
    "es7",
    "es2016",
    "universal javascript",
    "isomorphic",
    "no-cascade",
    "scalable",
    "large scale"
  ],
  "author": "Joakim Carlstein <joakim@klei.se>",
  "repository": "joakimbeng/unistyle",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.2.0",
    "os-tmpdir": "^1.0.1",
    "promise-all": "^1.0.0",
    "xo": "^0.9.0"
  },
  "xo": {
    "space": true,
    "ignores": [
      "test/fixtures/**",
      "examples/**"
    ]
  },
  "directories": {
    "test": "test",
    "example": "examples"
  },
  "dependencies": {
    "babel-core": "^5.8.25",
    "dashify": "^0.2.0",
    "meow": "^3.3.0",
    "pify": "^2.2.0",
    "pixelify": "^2.0.1",
    "to-css": "^1.2.1",
    "unistyle-flat": "^1.1.1"
  }
}
